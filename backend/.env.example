PORT=3001
NODE_ENV=development

# MongoDB
# For local development
MONGODB_URI=mongodb://localhost:27017/auplacements
# For production (MongoDB Atlas)
# MONGODB_URI=mongodb+srv://username:password@cluster.xxxxx.mongodb.net/auplacements

# JWT Secret
# Generate a secure random secret for production:
# node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Email Configuration
# Set EMAIL_PROVIDER to force a specific provider: gmail, sendgrid, or resend
# If not set, will try providers in order: gmail -> sendgrid -> resend
EMAIL_PROVIDER=gmail

# Gmail Configuration (RECOMMENDED)
# IMPORTANT: Use Gmail App Password (16 characters), not regular password
# How to get Gmail App Password:
# 1. Enable 2FA on your Gmail account
# 2. Go to: https://myaccount.google.com/apppasswords
# 3. Generate app password for "Mail"
# 4. Use the 16-character password here (no spaces)
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=abcd efgh ijkl mnop

# Alternative: Resend Configuration
# Sign up at https://resend.com/signup and get your API key
# Free tier: 100 emails/day, 3000 emails/month
# RESEND_API_KEY=re_your_api_key_here
# EMAIL_FROM=AU Placements <onboarding@resend.dev>

# Frontend URL
# For local development
FRONTEND_URL=http://localhost:5173
# For production
# FRONTEND_URL=https://your-frontend-domain.vercel.app
